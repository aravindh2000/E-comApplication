<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Profile_frg">
   <com.google.android.material.appbar.AppBarLayout
       android:layout_width="match_parent"
       android:background="#FEDBD0"
       android:layout_height="40dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:textColor="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="5dp"
         android:text="𝕡𝕣𝕠𝕗𝕚𝕝𝕖"/>
   </com.google.android.material.appbar.AppBarLayout>

   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:src="@drawable/profile"
       android:layout_marginLeft="10dp"
       android:id="@+id/imgpro"
       android:layout_marginTop="40dp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Following"
       android:id="@+id/followingid"
       android:textSize="17sp"
       android:textColor="@android:color/black"
       android:layout_marginLeft="160dp"
       android:layout_marginTop="50dp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="25sp"
       android:text="0"
       android:textColor="@android:color/black"
       android:id="@+id/followingCount"
       android:layout_marginTop="6dp"
       android:layout_below="@+id/followingid"
       android:layout_marginLeft="184dp"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Followers"
       android:id="@+id/followersid"
       android:layout_marginTop="50dp"
       android:layout_marginLeft="270dp"
       android:textSize="17sp"
       android:textColor="@android:color/black"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="0"
       android:textColor="@android:color/black"
       android:id="@+id/followersCount"
       android:layout_marginLeft="300dp"
       android:layout_marginTop="6dp"
       android:textSize="25sp"
       android:layout_below="@+id/followersid"

       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Name : "
       android:layout_below="@+id/imgpro"
       android:layout_marginTop="16dp"
       android:textSize="15sp"
       android:id="@+id/u"
       android:textColor="@android:color/black"
       android:layout_marginLeft="50dp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="user name"
       android:layout_toRightOf="@+id/u"
       android:textColor="@android:color/black"
       android:id="@+id/user"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="175dp"
       android:layout_marginLeft="60dp"
       android:textSize="18sp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Email : "
       android:id="@+id/pc"
       android:layout_below="@+id/u"
       android:textColor="@android:color/black"
       android:textSize="15sp"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="17dp"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="email"

       android:id="@+id/product"
       android:layout_below="@+id/user"
       android:layout_marginTop="12dp"
       android:layout_centerHorizontal="true"
       android:textSize="18sp"/>
   <Button
       android:layout_width="150dp"
       android:layout_height="50dp"
       android:id="@+id/edit"
       android:text="Product nos"

       android:layout_centerHorizontal="true"
       android:textColor="@android:color/holo_red_dark"
       android:layout_below="@+id/product"
       android:layout_marginLeft="135dp"/>

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:id="@+id/scroll"
android:visibility="visible"
       android:layout_height="350dp"
       android:layout_below="@+id/edit">

   </androidx.recyclerview.widget.RecyclerView>
   <Button
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:text="LOGOUT"
       android:id="@+id/logout"
       android:layout_centerHorizontal="true"
       android:textColor="@android:color/holo_red_dark"
       android:layout_below="@+id/scroll"
       android:layout_marginBottom="5dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"/>


</RelativeLayout>